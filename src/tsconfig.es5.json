{
    "compilerOptions": {
      "declaration": true,
      "module": "commonjs",
      "target": "es5",
      "baseUrl": ".",
      "stripInternal": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "outDir": "../build",
      "rootDir": ".",
      "lib": [
        "es2015",
        "dom"
      ],
      "skipLibCheck": true,
      "types": []
    },
    "angularCompilerOptions": {
      "annotateForClosureCompiler": true,
      "strictMetadataEmit": true,
      "skipTemplateCodegen": true,
      "flatModuleOutFile": "ngx-angular-loading.js",
      "flatModuleId": "ngx-angular-loading"
    },
    "files": [
      "./index.ts"
    ]
  }